---
import { ViewTransitions, slide} from 'astro:transitions'; 
import NavBar from '../components/NavMain.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate={slide({ duration: "1s" })}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body>
		<NavBar/>
		<main>
			<slot/>
		</main>
		<Footer/>
	</body>
</html>
<style is:global>
	@font-face{
		font-family: 'Akira' ;
		src: url('../../public/fonts/AkiraExpandedDemo.woff2') format('woff2');
		font-style: normal;
	}
	@font-face{
		font-family: 'OliviarSansLg' ;
		src: url('../../public/fonts/OliviarSans-Light.woff2') format('woff2');
		font-style: normal;
	}
	@font-face{
		font-family: 'OliviarSansRg' ;
		src: url('../../public/fonts/OliviarSans-Regular.woff2') format('woff2');
		font-style: normal;
	}
	:root {
		--bg-gradient: linear-gradient(45deg, #21D4FD 0%, #B721FF 100%);
	}
	html {
		background: #020202;
		background-size: 224px;
	}
	body{
		background:linear-gradient(#00000077, #00000077), url('../assets/images/Background/bg.webp');
		background-repeat: repeat;
	}

	.main-slot{
		padding-top: 100px;
	}
	h1, .txt-tittle{
		font-family: 'Akira', sans-serif;
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: left;
		margin-bottom: .5em;
		letter-spacing: 3px;
		text-wrap: wrap;
		filter: drop-shadow(0 0 10px black);
		color: white;
	}
	.text-gradient{
		background: linear-gradient(to right, #ff004c , #3b82f6 );
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: cover;
		background-position: center;	
	}
	
	.p {
		color: white;
		font-size: 1.5em;
		font-family: 'OliviarSansLg', sans-serif;
	}	
</style>
