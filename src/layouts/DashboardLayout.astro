---
import NavBar from '@components/dashboad/NavBar.astro';
import SideBar from '@components/dashboad/SideBar.astro'

interface Props{
    tittle: string;
}
const { tittle } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{tittle}</title>
    </head>
    <body>

        <header>
            <NavBar/>
        </header>
        <aside>
            <SideBar/>
        </aside>
        <main>
            <slot/>
        </main>

    </body>
</html>

<style>
    
    body{
        height: 100vh;
        padding: 1em;
        display: grid;
        grid-template-columns: 250px 1fr;
        grid-template-rows: 70px 1fr;
        gap: .5em;
        column-gap: 1em;
        background:  url('../assets/images/Background/bg.webp');
    }

    header{
        grid-column: 2 / 3;
        grid-row: 1 / 2;
    }
    aside{
        grid-column: 1 / 2;
        grid-row: 1 / 3;
    }
    main{
        background: gray;
        padding: 1em;
        grid-column: 2 / 3 ;
        grid-row: 2 / 3;
    }

    header, aside, main{
        border-radius: 2em;
        overflow: hidden;
    }

    

</style>