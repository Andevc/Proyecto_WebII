---

const { propCard } = Astro.props;


---

<section class="slider-section">
    <section class="card">
        <section class="card-img">
            <img src={propCard.img} alt="m">
        </section>
        <section class="card-content">
            <section class="card-content-info">
                <h1>{propCard.tittle}</h1>
                <p>{propCard.autor}</p>
            </section>
            <section>sdasda</section>
            <section class="card-content-button">
                asda
            </section>
        </section>
    </section>
</section>



<style>

    .slider-section{
        border: 1px solid cyan;
        width: 100%;
        border-radius: 2em;
        
    }

    .card{
        margin: 0 auto;
        height: 600px;
        width: 100%;
        display: grid;
        grid-template-columns: 400px 1fr;
        gap: 3em;
        padding: 2em 2.5em;
        color: white;
        
    }
    .card-img{
        
        height: 100%;       
        overflow: hidden; 
        border-radius: 2em;
        box-shadow: 0 0 10px black;
        
    }   

    .card-img img{
        
        border-radius: 2em;
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: top;
    }

    .card-content{
        height: 100%;
        display: grid;
        width: 100%;
        border: 1px solid white;
        
        place-items: center;
    }
    .card-content-button, .card-content-info{
        border: 1px solid salmon;
        padding: 2em 0;
    }

    .card-content-button{
        display: flex;
        align-items: center;
    }

    a{
        border: 1px solid white;
        padding: 1.5em 3em;
    }
</style>