<style>

h1 {
		font-size: 3em;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		letter-spacing: 3px;
		text-wrap: balance;
		filter: drop-shadow(0 0 10px black);
		color: white;

        height: 10%;
	}
	span {
		background: linear-gradient(45deg, #ff004c 0%, #f0ff21 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100%;
		background-position: 0%;
		
	}

    .container-creators{
        
        width: 100%;
        height: 100%;
        margin: 0 auto;
        backdrop-filter: blur(.4em);
        border-radius: 2em;
        padding: 2em;
        position: relative;
        box-shadow: -1px -1px 1.6em #ff004c,2px 2px 1.6em #f0ff21;
    }


    
    .lista{
        height: 90%;
        width: 100%;
        display: flex;
        flex-direction: row;
    }

    .table-col{
        width: 50%;
        
        padding: 0 1.5em .5em .5em;
        overflow: hidden;
        
    }
    .table-col ul{
        width: 100%;
    }


    .table-tittle{
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px 0 0;
        border-bottom: 3px solid white;
        color: white;
        font-weight: bold;
        letter-spacing: 2px;
        margin-bottom: 1.5em;
    }

    .table-tittle li{
        
        height: 3em;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        

    }

    .Rank{
        width: 10%;
    }
    .Creator{
        width: 40%;
    }
    .Total-Earn{
        width: 30%;
    }
    .NFTs-Sold{
        width: 20%;
    }
    .ranking{
        
        height: 80%;
        display: flex;
        flex-direction: column;
        
    }
    .ranking:hover{
        cursor: pointer;
    }

</style>