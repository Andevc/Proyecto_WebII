---
import CreatorInfo from "@components/CreatorInfo.astro";

---

<section class="container-creators">
    <section class="lista">
        <section class="table-col">
            
            <ul class="table-tittle">
                <li class="Rank" ></li>
                <li class="Creator" >Creador</li>
                <li class="Username" >Usuario</li>
                <li class="Total-Earn" >Total Ganado</li>
                <li class="NFTs-Sold" >NFTs Vendidos</li>
            </ul>
            <section class="ranking">
                <CreatorInfo
                    Rank="1"
                    Avatar="/images/avatars/avatar_profile_02.png"
                    CreatorName="Marco Garcia "
                    UserName="MarcoExplo"
                    TotalEarn="10500"
                    NFTsSold="350"
                />
                <CreatorInfo
                    Rank="2"
                    Avatar="/images/avatars/avatar_profile_05.png"
                    CreatorName="Sofia martinez"
                    UserName="SofiArt"
                    TotalEarn="10250"
                    NFTsSold="450"
                />
                <CreatorInfo
                    Rank="3"
                    Avatar="/images/avatars/avatar_profile_04.png"
                    CreatorName="Carlos Lopez"
                    UserName="Satoshi"
                    TotalEarn="9000"
                    NFTsSold="400"
                />
                <CreatorInfo
                    Rank="4"
                    Avatar="/images/avatars/avatar_profile_01.png"
                    CreatorName="Elena Rodriguez"
                    UserName="EtherQueen"
                    TotalEarn="7500"
                    NFTsSold="400"
                />
                <CreatorInfo
                    Rank="5"
                    Avatar="/images/avatars/avatar_profile_03.png"
                    CreatorName="Mauricio Perez"
                    UserName="MauMaster"
                    TotalEarn="6000"
                    NFTsSold="350"
                />
            </section>
        </section>
    </section>
    
</section>



<style>

    h1 {
        font-size: 3em;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        letter-spacing: 3px;
        text-wrap: balance;
        filter: drop-shadow(0 0 10px black);
        color: white;

        height: 10%;
    }
        

    .container-creators{
        width: 100%;
        height: 100%;
        margin: 0 auto;
        background-color: #090909dd;
        border-radius: 2em;
        padding: 2em;
        position: relative;
        
    }
    .lista{
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: row;
    }

    .table-col{
        width: 100%;
        
        padding: 0 1.5em .5em .5em;
        overflow: hidden;
        
    }
    .table-col ul{
        width: 100%;
    }


    .table-tittle{
        width: 100%;
        display: flex;
        
        align-items: center;
        gap: 3em;
        padding: 10px 0 0;
        border-bottom: 3px solid white;
        color: white;
        font-weight: bold;
        letter-spacing: 2px;
        margin-bottom: 1.5em;
        
    }

    .table-tittle li{
        height: 3em;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .Rank{
        width: 5%;
    }
    .Creator{
        width: 30%;
    }
    .UserName{
        width: 15%;
        margin-right: 1em;
    }
    .Total-Earn{
        width: 20%;
    }
    .NFTs-Sold{
        width: 20%;
    }
    .ranking{
        
        height: 80%;
        display: flex;
        flex-direction: column;
        
    }
    .ranking:hover{
        cursor: pointer;
    }

</style>