<section class="h-full w-full SignIn">
    <h1 class="txt-title">Sign In</h1>
    
    <section class="social-icons">
        <a href="#"><i class="fa-brands fa-facebook"></i></a>
        <a href="#"><i class="fa-brands fa-google"></i></a>
        <a href="#"><i class="fa-brands fa-linkedin"></i></a>
    </section>

    <form method="post" class="SignInForm">
        <section class="form-input">
            <label for="Username">Username</label>
            <input type="text" name="Username" id="Username" />
        </section>
        <section class="form-input">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" />
            <a href="#" class="text-right mt-1">forgot your password?</a>
        </section>
        <button type="submit">Submit</button>
    </form>
</section>

<style>
    .SignIn {
        display: grid;
        padding: 1.5em 3em;
        grid-template-rows: 1fr .5fr 4fr;
        background: #090909;
        border-radius: 4em 0 0 4em;
        overflow: hidden;
        box-sizing: border-box;
    }
    h1 {
        text-align: center;
        align-self: center;
    }
    .social-icons{
        display: grid;
        place-items: center;
        grid-template-columns: repeat(3, 50px);
        place-content: center;
        gap: 2em;
    }
    .social-icons a {
        width: 40px;
        height: 40px;   
    }
    .social-icons a i{
        color: white;
        font-size: 2em;
        text-align: center;
    }
    .social-icons a:hover i{
        color: var(--color-primary);
    }

    .SignInForm {
        display: grid;
        grid-template-rows: repeat(3, 1fr);
        padding: 0 3em;
        gap: 2em;
    }
    .form-input {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
    }
    .form-input input {
        border: none;
        width: 100%;
        background: transparent;
        border-bottom: 2px solid var(--color-text);
        color: var(--color-text);
        outline: none;
        
    }
    .form-input label {
        color: var(--color-text);
        letter-spacing: 0.2em;
        transition: 0.5s;
        font-weight: bold;
        font-size: .8em;
    }
    button {
        align-items: center;
        align-self: center;
        height: 40px;
        border-radius: 2em;
        background: var(--color-primary);
        transition: 0.5s;
        text-transform: uppercase;
        letter-spacing: 0.4em;
        font-weight: bold;
    }
    button:hover {
        box-shadow: 0 0 20px var(--color-primary);
    }

    a {
        color: gray;
        text-decoration: underline;
    }
    a:hover {
        color: var(--color-text);
    }
    .SignInOther {
        height: 100%;
        width: 100%;
        padding: 0 3em;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<script is:inline>
    const form = document.querySelector(".SignInForm");
    const userNameInput = form?.querySelector('input[name="Username"]');
    const passwordInput = form?.querySelector('input[name="password"]');
    const submitButton = form?.querySelector("button");
    submitButton?.addEventListener("click", (e) => {
        e.preventDefault();
        if (userNameInput.value === "alpha21" && passwordInput.value === "1234") {
            localStorage.setItem("isLoggedIn", "true");
            window.location.href = "https://dashboard-crypto-art.vercel.app/";
        }
    });
</script>
