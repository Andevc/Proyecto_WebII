---
import Layout from "../layouts/Layout.astro";
import TopCreators from "../components/nose/TopCreators.astro";
import ImageSlide from "@components/react/ImageSlide.jsx";
import WalletIcon from "@assets/icons/wallet.astro";
import AddIcon from "@assets/icons/add.astro"
import SellIcon from "@assets/icons/sell.astro";
import MarketSlider from "@components/react/AuctionCardSlide.jsx";
---
<Layout title="Market ">
	<main class="main-slot">
		<section class="market-container market-business-card" >
			<MarketSlider client:load/>
		</section>

		<h1 class="txt-tittle">Top <span class="text-gradient">Creators</span></h1>
		<section class="market-container market-creators"> 
			<TopCreators/> 
		</section>

		<h1 class="txt-tittle">Trending <span class="text-gradient">Top</span></h1>
		<section class="market-container market-top-art">
			<ImageSlide client:load />
		</section>

		<h1 class="txt-tittle">Create <span class="text-gradient">and</span> Sell</h1>
		<section class="market-container market-info">
			<section class="market-info-card">
				<section class="market-info-card-icon">
					<WalletIcon
						size="45"
						stroke="#fff"/>
				</section>
				<section>
					<h3>Set up your wallet</h3>
					<p>
						Once you've set up your wallet of choice, 
						connect it to NFT marketplace by clicking is link.
					</p>
				</section>

			</section>
			<section class="market-info-card">
				
				<section class="market-info-card-icon">
					<AddIcon
						size="45"
						stroke="#fff"/>
				</section>
				<section>
					<h3>Add your NFTs</h3>
					<p>
						Upload your work, add a title and description, and
						customize your NFTs with properties, stat, and unlockable content.
					</p>
				</section>
			
				

			</section>
			<section class="market-info-card">
				<section class="market-info-card-icon">
					<SellIcon
						size="45"
						stroke="#fff"/>
				</section>
				<section>
					<h3>Sell your NFTs</h3>
					<p>
						Choose between auctions, fixed-price and declining-price listings.
						You choose how you want to sell your NFTs, and we help you shell them!
					</p>
				</section>

			</section>
		</section>
	</main>
</Layout>

<style>
	h1{
		text-align: center;
		
	}
	.market-container{
		margin: 0 auto 5em;
		width: 80%;
	}
	.market-business-card{
		height: 550px;
		width: 90%;
		color: #fff;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		
	}

	.market-business-card::before{
		content: "";
		width: 100%;
		height: 40%;
		
		border-radius: 3em ;
		position: absolute;
		filter: blur(15em);
		transform: scale(.7);
		background: linear-gradient(to left, #3b82f6, #ff004c);
		
	}


	.market-creators{
		height: 500px;	
		padding: 2em;
		margin: 4em auto;
		position: relative;
		box-shadow: 0 0 50px black;
		border-radius: 2em;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
	}
	.market-creators::before{
		content: "";
		width: 100%;
		height: 100%;
		
		border-radius: 3em ;
		position: absolute;
		filter: blur(20em);
		transform: scale(.5);
		background: linear-gradient(to left, #3b82f6, #ff004c);
		
	}
	.market-top-art{
		width: 80%;

		filter: drop-shadow(0 0 50px black);
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.market-info{
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 4em;
	}
	.market-info-card{
		position: relative;
		z-index: 10;
		color: white;
		background: #090909;
		box-shadow: 0 0 50px black;
		border-radius: 2em;
		height: 350px;
		padding: 4em;
		display: grid;
		transition: .5s;
	}	
	.market-info-card h3{
		font-weight: bold;
		letter-spacing: 2px;
		
	}
	.market-info-card-icon{
		width: 60px;
		height: 60px;
		background: linear-gradient(to bottom right, #ff004c , #3b82f6 );
		border-radius: 1em;
		display:grid;
		place-items: center;	
	}
	.market-info-card::after, .market-info-card::before{
		content: "";
		position: absolute;
		width: 25%;
		height: 25%;
		border-radius: 50%;
		z-index: -1;
		filter: blur(10em);
		transform: scale(.7);
		
	}
	.market-info-card::after{
		background: #ff004c;
		top: 0;
		left: 0;
	}
	.market-info-card::before{
		background: #3b82f6;
		bottom: 0;
		right: 0;
	}
	.market-info-card:hover{	
		transform:scale(1.1);
	}
</style>