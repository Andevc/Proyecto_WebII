---

<Layout title="Welcome to NFTs">
	
	
	<main >
		<section class="section-one">
			<section class="max-[1440px]:w-full h-[500px] mb-10 flex flex-row justify-between items-center ">
				<section class=" xl:w-1/2 h-full sm:w-full  flex flex-col justify-evenly p-5">
					<section class="">
						<h1>Welcome to Secure <span class="text-gradient">NFTs</span> Innovation</h1>
						<p>
							Lorem ipsum dolor sit, amet consectetur adipisicing elit. Vero at quia qui placeat quas aut iste perspiciatis suscipit expedita aperiam.
						</p>
					</section>
					
					<section class=" ">
						<Button text='Get Started' />
						
					</section>
					
					<section class="flex justify-between pr-28 ">
						<section>
							<h4 class="font-bold tracking-[4px] text-[20px]">35K+</h4>
							<p>Trading Cards</p>
						</section>
						
						<section>
							<h4 class="font-bold tracking-[4px] text-[20px]">35K+</h4>
							<p>Trading Cards</p>
						</section>
						
						<section>
							<h4 class="font-bold tracking-[4px] text-[20px]">35K+</h4>
							<p>Trading Cards</p>
						</section>
					</section>
				</section>
	
				<section class="slide-image w-1/2 h-full px-4 overflow-hidden m-auto">
					<ImageSlide client:load />
				</section>
			</section>
		</section>
		




		<section class="w-full h-auto flex xl:flex-row justify-between items-center sm:flex-col">
			<section class="xl:w-1/2 sm:w-full">
				<h1>Welcome to <span class="text-gradient">Astro</span></h1>
				<p>
					Lorem ipsum dolor sit, amet consectetur adipisicing elit. Vero at quia qui placeat quas aut iste perspiciatis suscipit expedita aperiam.
				</p>
			</section>
			<section class="xl:w-1/2">
				<ul role="list" class="link-card-grid">
					<Card
						src="../../public/img4.jpg"
					/>
				</ul>
			</section>
		</section>

	</main>
	
	<Footer/>
</Layout>

<style>
	main {
		
		width: 100%;
		background-color: #08070c;
		color: white;
		font-size: 15px;
		line-height: 1.6;
		
		
	}
	.section-one{
		height: 550px;
		background: linear-gradient(#1c1c1cEE, #000000),url('../../public/bg-grid.png');
		background-size: 80px;
		padding: 0 40px;
		position: relative;
	}
	.section-one::after{
		content: "";
		position: absolute;
		height: 100%;
		width: 25%;
		z-index: 2;
		top: 0;
		right: 0;
		background: linear-gradient(to right,transparent, #000000);
		
	}
	.btn-gradient{
		background: linear-gradient(to left bottom,#ee2f57,#e85a51,#fa8e3e);
		text-align: center;
		color: white;
		font-weight: bold;
		letter-spacing: 2px;
		text-transform: uppercase;
		position: relative;
		border-radius: 0.8em;
		overflow: hidden;
		
	}
	.btn-stroke{
		
		background: #08070c;
		text-align: center;
		color: white;
		font-weight: bold;
		letter-spacing: 2px;
		text-transform: uppercase;
		border: 4px solid;
		border-image: linear-gradient(#ee2f57,#e85a51,#fa8e3e) 1;
	}
	

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: left;
		margin-bottom: .5em;
	}
	.text-gradient {
		background: linear-gradient(45deg, #21D4FD 0%, #B721FF 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100%;
		background-position: 0%;
	}
	.link-card-grid{
		width: 100%;
		overflow: hidden;

	}

	.slide-image{
		
		filter: drop-shadow(0 10px 20px black);
	}

</style>
